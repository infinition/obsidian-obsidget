/* Global box-sizing */
* {
    box-sizing: border-box;
}

/* Widget Instance Container */
.widget-instance-container {
    margin: 1.5rem 0;
    border-radius: 12px;
    overflow: hidden;
    background: var(--background-secondary);
    position: relative;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    min-height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.widget-loading {
    color: var(--text-muted);
    font-size: 0.9rem;
    font-style: italic;
    animation: widget-pulse 1.5s infinite ease-in-out;
}

@keyframes widget-pulse {
    0% { opacity: 0.5; }
    50% { opacity: 1; }
    100% { opacity: 0.5; }
}

/* Save to Gallery Button */
.widget-save-to-gallery-btn {
    background: var(--interactive-accent);
    color: white;
    border: none;
    border-radius: 6px;
    padding: 6px 10px;
    cursor: pointer;
    font-size: 1.1em;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    opacity: 0;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 100;
}

.widget-instance-container:hover .widget-save-to-gallery-btn {
    opacity: 0.8;
}

.widget-save-to-gallery-btn:hover {
    background: var(--interactive-accent-hover);
    transform: scale(1.15);
    opacity: 1 !important;
}

/* Hide in reading mode */
.markdown-rendered .widget-save-to-gallery-btn {
    display: none !important;
}

/* ========================================
   GALLERY MODAL
   ======================================== */

.modal.widget-gallery-modal {
    max-width: 95vw !important;
    width: 1400px !important;
    max-height: 92vh !important;
    height: 92vh !important;
    background: linear-gradient(135deg, var(--background-primary) 0%, var(--background-secondary) 100%);
    display: flex;
    flex-direction: column;
    padding: 0 !important;
    overflow: hidden !important;
    border-radius: 20px;
    box-shadow: 0 25px 80px rgba(0, 0, 0, 0.35);
}

.widget-gallery-modal .modal-content {
    padding: 0 2rem 2rem 2rem !important;
    overflow-y: auto !important;
    overflow-x: hidden !important;
    flex-grow: 1;
    height: 100%;
    width: 100%;
}

/* Header with border-radius */
.gallery-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 2rem;
    background: linear-gradient(135deg, var(--interactive-accent) 0%, color-mix(in srgb, var(--interactive-accent) 80%, #000) 100%);
    position: sticky;
    top: 0;
    z-index: 100;
    border-radius: 16px 16px 0 0;
    width: 100%;
}

.widget-gallery-modal h2 {
    font-size: 1.8rem;
    font-weight: 800;
    margin: 0;
    color: white;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
}

.gallery-close-btn {
    background: rgba(255, 255, 255, 0.2) !important;
    border: none !important;
    font-size: 1.4rem !important;
    color: white !important;
    cursor: pointer;
    padding: 8px 12px !important;
    border-radius: 10px !important;
    transition: all 0.2s;
    box-shadow: none !important;
    display: flex;
    align-items: center;
    justify-content: center;
    line-height: 1;
}

.gallery-close-btn:hover {
    background: rgba(255, 255, 255, 0.3) !important;
    transform: scale(1.05);
}

/* Hide default Obsidian close button for this modal */
.widget-gallery-modal .modal-close-button {
    display: none !important;
}

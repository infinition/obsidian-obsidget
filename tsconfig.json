{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "outDir": ".",
        "baseUrl": ".",
        "lib": ["ES2020", "DOM"]
    },
    "include": ["main.ts", "i18n.ts", "**/*.ts"],
    "exclude": ["node_modules", "dist", "main.js"]
}
